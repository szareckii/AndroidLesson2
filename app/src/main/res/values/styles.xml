<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:checkboxStyle">@style/MyCheckBoxStyle</item>
        <item name="android:radioButtonStyle">@style/MyRadioButtonStyle</item>
    </style>

    <style name="MyCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="buttonTint">@android:color/secondary_text_light</item>
    </style>

    <style name="MyRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="buttonTint">@android:color/secondary_text_light</item>
    </style>

</resources>